│   ├── chat.js                         # Real-time chat functionality
│   ├── notifications.js                # Notification system
│   ├── profile-manager.js              # Profile management
│   └── payments.js                     # Mpesa payment integration
│
├── components/
│   ├── property-card.html              # Reusable property card component
│   ├── chat-window.html                # Chat interface component
│   └── booking-modal.html              # Booking modal component
│
├── pages/
│   ├── property-search.html            # Property search page
│   ├── property-details.html           # Individual property details
│   ├── bookings.html                   # Bookings management page
│   ├── profile.html                    # User profile page
